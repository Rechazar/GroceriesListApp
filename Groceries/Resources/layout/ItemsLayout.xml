
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/backButton_id"
            android:text="â—€"
            android:textSize="40dp"
            android:background="@android:color/holo_purple"
            android:textColor="@android:color/white"  />

        <TextView
            android:text="List Name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listNameTextView_id"
            android:background="@android:color/holo_purple"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@android:color/white" />

    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newItemEditText_id"
        android:hint="+ New Item"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:singleLine="true"
        android:inputType="text" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/itemsListView_id"
        android:layout_weight="1" />
    <Button
        android:text="Share this List"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:id="@+id/shareThisButton_id"
        android:background="@android:color/holo_orange_dark" />


</LinearLayout>